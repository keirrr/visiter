<h1><%= business.name %></h1>
<h2><%= business.description %></h2>
<h3>Opinions: </h3>
<ul>

    <% opinions=business.opinions %>
    <% opinions.forEach(function(opinion){ %>
            <!--
        <%Users.findById(opinion.owner, function(err, owner){ %>
            <% console.log(owner.username, owner.secondname); %>
            
            <% name = owner.username %>
        <%}); %>
            -->
        <li>
            <%= opinion.owner %>
            <br>
            <%= opinion.rating %>
            <br>
            <%= opinion.comment %>
        </li>
    <% }); %>

</ul>
<form action="/business/<%= business._id %>/opinion" method="POST">
    <label for="comment">
        <input type="text" name="comment">
    </label>
    <label for="rating">
        <input type="number" name="rating">
    </label>
    <input id="submit" type="submit" value="Dodaj opinie">
</form>
